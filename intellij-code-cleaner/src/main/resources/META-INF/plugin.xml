<idea-plugin>
    <id>com.github.nhat-phan.intellij-codeclimate</id>
    <name>Code Cleaner</name>
    <vendor email="nhat.phan@ntworld.net" url="https://github.com/nhat-phan">Nhat Phan</vendor>

    <description><![CDATA[
Blah Blah Blah Blah Blah Blah Blah Blah Blah Blah

]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Code Cleaner"
                    secondary="false"
                    anchor="bottom"
                    icon="/icons/code-cleaner.svg"
                    factoryClass="net.ntworld.intellijCodeCleaner.ui.CodeCleanerToolWindowFactory"/>
    </extensions>

    <actions>
        <action id="net.ntworld.intellijCodeCleaner.action.AnalyzeAction"
                class="net.ntworld.intellijCodeCleaner.action.AnalyzeAction"
                text="Analyze Code Smells and Duplications"
                description="Analyze code smells and duplications"
                icon="/icons/analyze-action.svg"
        >
            <add-to-group group-id="AnalyzeMenu" anchor="last"/>
        </action>
        <action id="net.ntworld.intellijCodeCleaner.action.HighlightAction"
                class="net.ntworld.intellijCodeCleaner.action.HighlightAction" text="Show shits"
                description="Show shits in the file">
            <add-to-group group-id="EditorGutterPopupMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>